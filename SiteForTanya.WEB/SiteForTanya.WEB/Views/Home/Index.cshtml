<script type="text/javascript">

    var mainImages = document.getElementsByClassName("mainImage");
    for (var i = 0; i < mainImages.length; i++) {
        mainImages[i].addEventListener("load", showImg(mainImages[i]), false);
    }
    function showImg(elem) {
        $(elem).animate({
                'opacity': '1'
            }, 700, function () {
                $('.photoAndDescription').animate({
                    'opacity': '1'
                }, 400, function () {
                    $('.scale').each(function (index, element) {
                        setTimeout(function () {
                            $(element).css('opacity', '1');
                        }, 100 * index);
                    });
                });
            });
        };

        //$(window).resize(function () {
