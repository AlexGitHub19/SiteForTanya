<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link type="text/css" rel="stylesheet" href="~/Content/Layout.css"/>
    <link type="text/css" rel="stylesheet" href="~/Content/Site.css" />

    @if (ViewBag.ViewName == "HomeIndex")
    {
        <link type="text/css" rel="stylesheet" href="~/Content/Home/HomeIndex.css"/>
        <link rel="stylesheet" href="~/Content/font-awesome.min.css">


        <link type="text/css" rel="stylesheet" href="~/Content/ScaleImage.css" />
    }
    else if (ViewBag.ViewName == "HomeProduct")
    {
        <link type="text/css" rel="stylesheet" href="~/Content/Products/Balloon_Product.css" />
    }
    else if (ViewBag.ViewName == "WorkIndex")
    {
        <link type="text/css" rel="stylesheet" href="~/Content/Work/WorkIndex.css" />
    }
    else if (ViewBag.ViewName == "WorkSets")
    {
        //<link type="text/css" rel="stylesheet" href="~/Content/Work/WorkSets.css" />
        <link rel="stylesheet" href="~/Content/font-awesome.min.css">
        <link type="text/css" rel="stylesheet" href="~/Content/SearchElement.css" />
        <link type="text/css" rel="stylesheet" href="~/Content/PaginationElement.css" />
        <link type="text/css" rel="stylesheet" href="~/Content/Loading.css" />
        <link type="text/css" rel="stylesheet" href="~/Content/Set.css" />
        <script src='@Url.Content("~/Scripts/PaginationElement.js")' type="text/javascript"></script>
    }
    else if (ViewBag.ViewName == "WorkSet")
    {
        <link type="text/css" rel="stylesheet" href="~/Content/SetStyle.css" />
        <link type="text/css" rel="stylesheet" href="~/Content/SetShowingStyle.css" />
        <link type="text/css" rel="stylesheet" href="~/Content/ScaleImage.css" />
        <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    }
    else if (ViewBag.ViewName == "WorkImages")
    {

        <link type="text/css" rel="stylesheet" href="~/Content/Images.css" />
        <link rel="stylesheet" href="~/Content/font-awesome.min.css">
        <link type="text/css" rel="stylesheet" href="~/Content/SearchElement.css" />
        <link type="text/css" rel="stylesheet" href="~/Content/PaginationElement.css" />
        <link type="text/css" rel="stylesheet" href="~/Content/Loading.css" />
        <link type="text/css" rel="stylesheet" href="~/Content/ScaleImage.css" />
        <script src='@Url.Content("~/Scripts/PaginationElement.js")' type="text/javascript"></script>
    }


    <script src='@Url.Content("~/Scripts/jquery-3.3.1.min.js")' type="text/javascript"></script>
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")" type="text/javascript"></script>
    
    @*magnific popup*@
    <link rel="stylesheet" href="~/Content/magnific-popup.css">
    <script src="~/Scripts/jquery.magnific-popup.min.js"></script>

    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Raleway" />

    
</head>
<body>
    <div class="mobile-menu">  
        <ul>
            <li><a href="">Home</a></li>
            <li><a href="/Work">Work</a></li>
            <li><a href="/Contacts">Contacts</a></li>
            <li><a href="/Blog">Blog</a></li>
        </ul>
    </div>
    <div class="row">
        <div class="main-menu col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div style="display:inline-block; width: 100%;">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/Work">Work</a></li>
                    <li><a href="/Contacts">Contacts</a></li>
                    <li><a href="/Blog">Blog</a></li>
                </ul>
            </div>                           
        </div>
    </div>
    <div id="nav-icon">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
    <div class="body-content">
        @RenderBody()
    </div>
            <script>
                $(document).ready(function () {

                    $('#nav-icon').click(function () {
                        $(this).toggleClass('open');
                        var windowWidth = $(window).width();
                        if ($(this).hasClass('open')) {
                            $('.mobile-menu').animate({
                                width: windowWidth*0.78
                            }, 200);
                            $('body').animate({
                                left: -windowWidth * 0.78
                            }, 200);
                        }
                        else {
                            $('.mobile-menu').animate({
                                width: 0
                            }, 200);
                            $('body').animate({
                                left: '0px'
                            }, 200);
                        }
                    });

                    $(window).resize(function () {
                        if ($(this).width() >= 600 && $('#nav-icon').first().hasClass('open'))
                        {
                            $('#nav-icon').first().removeClass('open');
                            $('.mobile-menu').animate({
                                width: 0
                            }, 200);
                            $('body').animate({
                                left: '0px'
                            }, 200);
                        }

                        if ($('#nav-icon').first().hasClass('open'))
                        {
                            var windowWidth = $(window).width();                      
                            $('.mobile-menu').width(windowWidth*0.78);
                            $('body').animate({
                            left: -windowWidth * 0.78
                            }, 0);

                        }
 
                    });

                });
            </script>

            @*@Scripts.Render("~/bundles/jquery")*@
            @*@Scripts.Render("~/bundles/bootstrap")*@
            @RenderSection("scripts", required: false)
</body>
</html>
