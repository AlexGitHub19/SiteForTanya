            <select id="my_select">
                <option>Eng</option>
                <option>Rus</option>
                <option>GER</option>
            </select>
        </div>*@
    </div>
    <div id="nav-icon">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
    <div class="body-content">
        @RenderBody()
        <hr />
    
