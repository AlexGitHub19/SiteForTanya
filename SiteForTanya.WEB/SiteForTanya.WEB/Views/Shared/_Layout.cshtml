<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TP - @ViewBag.Title</title>
    <link rel="icon" type="image/png" href="~/Content/Images/icons8-google-64.png" />
    @*<link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Raleway" />*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/jquery/css")
    @RenderSection("scripts", required: false)
    <link type="text/css" rel="stylesheet" href="~/Content/Layout.css" />

    
</head>
<body>
    <div class="mobile-menu">  
        <ul>
            <li><a href="/Work">Work</a></li>
            <li><a href="/About">About</a></li>            
            <li><a href="/Blog">Blog</a></li>
            <li><a href="/Contacts">Contacts</a></li>
        </ul>
    </div>
    <div class="row main-menu-container">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 main-menu">
            <div>
                <ul>
                    <li><a href="/Work" id ="menu-item-Work" class="menu-item">Work</a></li>
                    <li><a href="/About" id ="menu-item-About" class="menu-item">About</a></li>
                    <li><a href="/" class="menu-item-logotip"><img src="~/Content/Images/CaptionLarge.jpg"></a></li>                    
                    <li><a href="/Blog" id ="menu-item-Blog" class="menu-item">Blog</a></li>
                    <li><a href="/Contacts" id ="menu-item-Contacts" class="menu-item">Contacts</a></li>
                </ul>
            </div>                           
        </div>
    </div>
    <span id="menu-ckecked"></span>
    <div class="logotip"><a href="/" class="menu-item-logotip"><img class="logotip-image-large" src="~/Content/Images/CaptionLarge.jpg"><img class="logotip-image-small" src="~/Content/Images/CaptionSmall.jpg"></a></div>
    <div class="pageName">illustration</div>
    <div id="nav-icon">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
    <div class="body-content">
        @RenderBody()
    </div>
            <script>               

                $('.main-menu').ready(function () {

                    @{
                        string controllerName = ViewBag.Controller;
                        if (controllerName == "Work")
                        {

                             <text>
                                $('#menu-ckecked').css('left', $('#menu-item-Work').offset().left);
                                $('#menu-ckecked').animate({
                                    'opacity': '1'
                                }, 700);
                             </text>
                        }
                        else if (controllerName == "Contacts")
                        {
                             <text>
                                $('#menu-ckecked').css('left', $('#menu-item-Contacts').offset().left);
                                $('#menu-ckecked').animate({
                                    'opacity': '1'
                                }, 700);
                             </text>
                        }
                        else if (controllerName == "Blog")
                        {
                            <text>
                                $('#menu-ckecked').css('left', $('#menu-item-Blog').offset().left);
                                $('#menu-ckecked').animate({
                                    'opacity': '1'
                                }, 700);
                             </text>
                        }
                        else if (controllerName == "About")
                        {
                            <text>
                                $('#menu-ckecked').css('left', $('#menu-item-About').offset().left);
                                $('#menu-ckecked').animate({
                                    'opacity': '1'
                                }, 700);
                             </text>
                        }
                    }

                    $('#nav-icon').click(function () {
                        $(this).toggleClass('open');
                        var windowWidth = $(window).width();
                        if ($(this).hasClass('open')) {
                            $('.mobile-menu').animate({
                                width: windowWidth * 0.78
                            }, 200);
                            $('body').animate({
                                left: -windowWidth * 0.78
                            }, 200);
                        }
                        else {
                            $('.mobile-menu').animate({
                                width: 0
                            }, 200);
                            $('body').animate({
                                left: '0px'
                            }, 200);
                        }
                    });

                    $(window).resize(function () {
                        if ($(this).width() >= 600 && $('#nav-icon').first().hasClass('open')) {
                            $('#nav-icon').first().removeClass('open');
                            $('.mobile-menu').animate({
                                width: 0
                            }, 200);
                            $('body').animate({
                                left: '0px'
                            }, 200);
                        }

                        if ($('#nav-icon').first().hasClass('open')) {
                            var windowWidth = $(window).width();
                            $('.mobile-menu').width(windowWidth * 0.78);
                            $('body').animate({
                                left: -windowWidth * 0.78
                            }, 0);

                        }

                         @{
                            if (controllerName == "Work")
                            {

                                <text>
                                   $('#menu-ckecked').css('left', $('#menu-item-Work').offset().left);
                                </text>
                            }
                            else if (controllerName == "Contacts")
                            {
                                <text>
                                     $('#menu-ckecked').css('left', $('#menu-item-Contacts').offset().left);
                                </text>
                            }
                            else if (controllerName == "Blog")
                            {
                                <text>
                                    $('#menu-ckecked').css('left', $('#menu-item-Blog').offset().left);
                                </text>
                            }
                                else if (controllerName == "About")
                            {
                                <text>
                                    $('#menu-ckecked').css('left', $('#menu-item-About').offset().left);
                                </text>
                            }
                        }

                    });

                });
            </script>
</body>
</html>
