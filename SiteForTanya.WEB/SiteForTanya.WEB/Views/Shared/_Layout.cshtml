                </footer>
    </div>
            <script>
                $(document).ready(function () {
                    //$('#my_select').options.style.border = "2px solid #FF8000";

                    $('#nav-icon').click(function () {
                        $(this).toggleClass('open');
                        var windowWidth = $(window).width();
                        if ($(this).hasClass('open')) {
                            $('.mobile-menu').animate({
                                width: windowWidth*0.78
                            }, 200);
                            $('body').animate({
                                left: -windowWidth * 0.78
                            }, 200);
                        }
                        else {
                            $('.mobile-menu').animate({
                                width: 0
                            }, 200);
                            $('body').animate({
                                left: '0px'
                            }, 200);
                        }
                    });

                    $(window).resize(function () {
                        if ($(this).width() >= 600 && $('#nav-icon').first().hasClass('open'))
                        {
                            $('#nav-icon').first().removeClass('open');
                            $('.mobile-menu').animate({
                                width: 0
                            }, 200);
                            $('body').animate({
                                left: '0px'
                            }, 200);
                        }

                        if ($('#nav-icon').first().hasClass('open'))
                        {
                            var windowWidth = $(window).width();                      
                            $('.mobile-menu').width(windowWidth*0.78);
                            $('body').animate({
                            left: -windowWidth * 0.78
                            }, 0);

                        }
 
                    });

                });
            </script>

            @*@Scripts.Render("~/bundles/jquery")*@
            @*@Scripts.Render("~/bundles/bootstrap")*@
            @RenderSection("scripts", required: false)
</body>
</html>
