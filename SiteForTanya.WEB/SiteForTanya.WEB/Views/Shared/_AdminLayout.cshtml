<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.ViewName</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link type="text/css" rel="stylesheet" href="~/Content/AdminLayout.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/Site.css" />

    @if (ViewBag.ViewName == "AdminIndex")
    {
        <link type="text/css" rel="stylesheet" href="~/Content/Admin/AdminIndex.css" />
    }
    else if (ViewBag.ViewName == "AdminSets")
    {
        <link type="text/css" rel="stylesheet" href="~/Content/Admin/AdminSets.css" />
        <link rel="stylesheet" href="~/Content/font-awesome.min.css">
        <link type="text/css" rel="stylesheet" href="~/Content/SearchElement.css" />
        <link type="text/css" rel="stylesheet" href="~/Content/PaginationElement.css" />
        <link type="text/css" rel="stylesheet" href="~/Content/Loading.css" />
        <link type="text/css" rel="stylesheet" href="~/Content/Set.css" />
        <script src='@Url.Content("~/Scripts/PaginationElement.js")' type="text/javascript"></script>
    }
    else if (ViewBag.ViewName == "AdminImages")
    {
        <link type="text/css" rel="stylesheet" href="~/Content/Images.css" />
        <link type="text/css" rel="stylesheet" href="~/Content/Admin/AdminImages.css" />
        <link rel="stylesheet" href="~/Content/font-awesome.min.css">
        <link type="text/css" rel="stylesheet" href="~/Content/SearchElement.css" />
        <link type="text/css" rel="stylesheet" href="~/Content/PaginationElement.css" />
        <link type="text/css" rel="stylesheet" href="~/Content/Loading.css" />
        <script src='@Url.Content("~/Scripts/PaginationElement.js")' type="text/javascript"></script>
    }
    else if (ViewBag.ViewName == "AdminAddSet")
    {
        <link type="text/css" rel="stylesheet" href="~/Content/Admin/AdminAddSet.css" />
        <link type="text/css" rel="stylesheet" href="~/Content/SetStyle.css" />
        <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    }
    else if (ViewBag.ViewName == "AdminDeleteSet")
    {
        <link type="text/css" rel="stylesheet" href="~/Content/Admin/AdminDeleteSet.css" />
    }
    else if (ViewBag.ViewName == "AdminChangeSet")
    {
        <link type="text/css" rel="stylesheet" href="~/Content/Admin/AdminAddSet.css" />
        <link type="text/css" rel="stylesheet" href="~/Content/SetStyle.css" />
        <link type="text/css" rel="stylesheet" href="~/Content/Admin/AdminChangeSet.css" />
        <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    }
    else if (ViewBag.ViewName == "AdminSet")
    {
        <link type="text/css" rel="stylesheet" href="~/Content/SetStyle.css" />
        <link type="text/css" rel="stylesheet" href="~/Content/SetShowingStyle.css" />
    }

    <script src='@Url.Content("~/Scripts/jquery-3.3.1.min.js")' type="text/javascript"></script>
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")" type="text/javascript"></script>

    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Raleway" />

</head>
<body>
     <div class="mobile-menu">  
        <ul>
            <li><a href="/Admin/Index">Home</a></li>
            <li><a href="/Admin/Sets">Sets</a></li>
            <li><a href="/Admin/Images">Images</a></li>
            <li><a href="/Admin/Blog">Blog</a></li>
            @*<li><a href="/Account/LogOff">LogOff</a></li>*@                   
        </ul>
         @using (Html.BeginForm("LogOff", "Account", FormMethod.Post))
            {
             @Html.AntiForgeryToken();
             <div class="logOff-mobile">
                 <button class="my-btn btn btn-default" type="submit">Log off</button>
             </div>
            }        
    </div>
    <div class="row">
        <div class="main-menu col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div style="display:inline-block; width: 100%;">
                <ul>
                    <li><a href="/Admin/Index">Home</a></li>
                    <li><a href="/Admin/Sets">Sets</a></li>
                    <li><a href="/Admin/Images">Images</a></li>
                    <li><a href="/Admin/Blog">Blog</a></li>
                </ul>
            </div>                           
        </div>
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken();
            <div class="logOff">
                <button class="my-btn btn btn-default" type="submit">Log off</button>
            </div>
        }
    </div>
    <div id="nav-icon">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
    <div class="body-content">
        @RenderBody()
    </div>

    <script>
                $(document).ready(function () {
                    $('#nav-icon').click(function () {
                        $(this).toggleClass('open');
                        var windowWidth = $(window).width();
                        if ($(this).hasClass('open')) {
                            $('.mobile-menu').animate({
                                width: windowWidth*0.78
                            }, 200);
                            $('body').animate({
                                left: -windowWidth * 0.78
                            }, 200);
                        }
                        else {
                            $('.mobile-menu').animate({
                                width: 0
                            }, 200);
                            $('body').animate({
                                left: '0px'
                            }, 200);
                        }
                    });

                    $(window).resize(function () {
                        if ($(this).width() >= 600 && $('#nav-icon').first().hasClass('open'))
                        {
                            $('#nav-icon').first().removeClass('open');
                            $('.mobile-menu').animate({
                                width: 0
                            }, 200);
                            $('body').animate({
                                left: '0px'
                            }, 200);
                        }

                        if ($('#nav-icon').first().hasClass('open'))
                        {
                            var windowWidth = $(window).width();
                            $('.mobile-menu').width(windowWidth*0.78);
                            $('body').animate({
                            left: -windowWidth * 0.78
                            }, 0);

                        }
                    });

                });
    </script>

    @*@Scripts.Render("~/bundles/jquery")*@
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>

